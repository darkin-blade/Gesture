<resources>

    <!-- 弹窗按钮 -->
    <style name="save_button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">16dp</item>

        <item name="android:background">@drawable/button_save</item>
        <item name="android:text">Save</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="delete_button" parent="save_button">
        <item name="android:background">@drawable/button_delete</item>
        <item name="android:text">Delete</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="cancel_button" parent="save_button">
        <item name="android:background">@drawable/button_cancel</item>
        <item name="android:text">Cancel</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

</resources>
